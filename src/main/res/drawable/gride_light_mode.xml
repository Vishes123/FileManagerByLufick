<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state: हल्का darker, दबा हुआ look -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#cccccc"
            android:centerColor="#bbbbbb"
            android:endColor="#aaaaaa"/>   <!-- bottom -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#999999"/>
        </shape>
    </item>

    <!-- Default raised state: light top, darker bottom -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#bbbbbb"
            android:centerColor="#FFFDFD"
            android:endColor="#dddddd"/>   <!-- bottom darker -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#bbbbbb"/>
        </shape>
    </item>

</selector>
