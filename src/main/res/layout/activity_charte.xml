<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Charte">

    <LinearLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">

        <!-- AppBar with Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/App">

            <androidx.appcompat.widget.Toolbar
                android:layout_marginTop="30dp"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/App2"
                app:title="Storage Chart"
                app:titleTextColor="@android:color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Chart Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvChartCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FFFFFF">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="12dp" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCenterText"
                    android:text="Scanning is prosses..."
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="20dp"

                    />
            </androidx.cardview.widget.CardView>

            <!-- Storage Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvStorageInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:id="@+id/llStorageInfoContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle">

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/blue"
                        android:background="@drawable/progress_bar_card" />

                    <!-- Images row -->
                    <LinearLayout
                        android:id="@+id/llImagesRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:id="@+id/ivImagesIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvImagesLabel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Images"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/textImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0MB / 5GB"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressImage"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progressTint="#FF5722"
                        android:progress="0"
                        android:max="100"
                        android:layout_marginBottom="8dp" />

                    <!-- Videos row -->
                    <LinearLayout
                        android:id="@+id/llVideosRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:id="@+id/ivVideosIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_media_play"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvVideosLabel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Videos"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/textVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0MB / 5GB"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressVideo"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progressTint="#03A9F4"
                        android:progress="0"
                        android:max="100"
                        android:layout_marginBottom="8dp" />

                    <!-- Documents row -->
                    <LinearLayout
                        android:id="@+id/llDocsRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:id="@+id/ivDocsIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/doc"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvDocsLabel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Documents"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/textDocs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0MB / 5GB"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressDocs"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progressTint="#FF5722"
                        android:progress="0"
                        android:max="100"
                        android:layout_marginBottom="8dp" />

                    <!-- Others row -->
                    <LinearLayout
                        android:id="@+id/llOthersRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:id="@+id/ivOthersIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/folder3"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvOthersLabel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Others"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/textOthers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0MB / 5GB"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressOthers"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progressTint="#FF5722"
                        android:progress="0"
                        android:max="100"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
