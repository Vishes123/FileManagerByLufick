<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apk_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="#010312">

    <ImageView
        android:id="@+id/ducImageApk"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/apk"
    android:contentDescription="APK Icon"
    android:layout_gravity="center_vertical"
    android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNamedocApk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APK File Name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtSizedocApk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textColor="#EFEBEB"
            android:textSize="14sp" />


    </LinearLayout>
    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/Apkfevratebtn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star_big_on"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="More options"

        android:padding="8dp" />

    <ImageView
        android:id="@+id/imageButtonApk"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/three_dot"
        android:contentDescription="More Options"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"/>

</LinearLayout>
