<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recentItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#101010"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/recentFileIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/file"
    android:layout_marginEnd="10dp"
    android:contentDescription="File Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recentFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/recentFileDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modified Time"
            android:textColor="#BBBBBB"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/recentFileOptions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/three_dot"
        android:contentDescription="Options"
        android:background="?attr/selectableItemBackgroundBorderless" />

</LinearLayout>
