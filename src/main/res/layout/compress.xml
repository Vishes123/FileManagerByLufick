<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/bg_dark_rounded">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/compressimg" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleRename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Zip Name"
        android:paddingStart="16dp"
        android:paddingTop="19dp"
        android:paddingEnd="16dp"
        android:textStyle="bold"
        android:textColor="#CCCCCC"
        android:textSize="18sp" />

    <!-- Input field -->
    <EditText
        android:id="@+id/editRename2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/edittext_bg_dark"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:hint="Enter new name"
        android:inputType="text" />
</LinearLayout>
