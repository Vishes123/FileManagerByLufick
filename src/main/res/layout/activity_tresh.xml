<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App"
    tools:context=".tresh.TreshActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarDowenlode2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/App"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarTresh"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/App2"
            android:title="Photos"
            android:titleTextColor="@android:color/white"
            android:layout_marginTop="15dp" />
    </com.google.android.material.appbar.AppBarLayout>


    <!-- Header Include -->
    <include
        android:id="@+id/trashHeader"
        layout="@layout/trash_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarDowenlode2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seprateTreshRecycle"
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/trashHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/Tpro"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminateTint="@color/blue"
        android:background="@drawable/progress_bar_card"
        app:layout_constraintTop_toBottomOf="@id/trashHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
